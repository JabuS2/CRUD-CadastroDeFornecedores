@model Fornecedor
@{
    ViewData["Title"] = "Editar Fornecedores";
}


<h1 class="text-center display-4">Editar Fornecedor</h1>

<form asp-controllet="Fornecedor" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome Fantasia</label>
        <input type="text" asp-for="NomeFantasia" class="form-control" placeholder="Nome fantasia da Empresa">
    </div>

    <div class="form-group">
        <label for="nome">Razão Social</label>
        <input type="text" asp-for="RazãoSocial" class="form-control" placeholder="Razão Social da Empresa">
    </div>

    <div class="form-group">
        <label for="nome">Endereço Completo</label>
        <input type="text" asp-for="Endereco" type="text" class="form-control" placeholder="Endereço da Empresa">
    </div>

    <div class="form-group">
        <label for="nome">Telefone</label>
        <input type="tel" asp-for="Telefone" class="form-control" placeholder="Telefone para contato">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Endereço de email</label>
        <input asp-for="Email" class="form-control" type="email" class="form-control" placeholder="E-mail da Empresa">
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary ">Alterar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Fornecedor" asp-action="Index" role="button">Voltar</a>
    </div>

</form>
