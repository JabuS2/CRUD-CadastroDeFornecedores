@model Fornecedor
@{
    ViewData["Title"] = "Confirmação Apagar Fornecedores";
}

<div class="text-center">

    <h3>Realmente deseja apagar o Fornecedor (@Model.NomeFantasia)?</h3>
</div>


<div class="d-grid gap-2">
    <a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Fornecedor" asp-action="Excluir" asp-route-id="@Model.Id">Confirmar Exclusão</a>
</div>
