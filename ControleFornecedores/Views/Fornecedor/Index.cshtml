@model List<Fornecedor>

@{
    ViewData["Title"] = "Listagem de Fornecedores";
}

<h1 class="text-center display-4">Listagem de Fornecedores</h1>

<table class="table" id="table-fornecedores">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Razão Social</th>
            <th scope="col">Nome Fantasia</th>
            <th scope="col">Telefone</th>
            <th scope="col">Email</th>
            <th scope="col"> <a role="button" class="btn btn-success" asp-action="Criar" asp-controller="Fornecedor">Adicionar Fornecedor</a> </th>

        </tr>
    </thead>
    <tbody>

        @if(Model != null && Model.Any())
        {
            foreach (Fornecedor fornecedor in Model)
            {
                <tr>
                    <th scope="row">@fornecedor.Id</th>
                    <td>@fornecedor.RazãoSocial</td>
                    <td>@fornecedor.NomeFantasia</td>
                    <td>@fornecedor.Telefone</td>
                    <td>@fornecedor.Email</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-danger" asp-action="Apagar" asp-controller="Fornecedor" asp-route-id="@fornecedor.Id">Apagar</a>
                            <a role="button" class="btn btn-primary" asp-action="Editar" asp-controller="Fornecedor" asp-route-id="@fornecedor.Id">Editar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>